<section class="mb-l">
  <h2>Round <%= game.current_round_number %>: <%= game.current_round.aasm_state %></h2>

  <% if game.current_round.finished? %>
    <h3>Reveal next public objective</h3>

    <%= form_with model: @game, url: start_next_round_game_path(game), method: :post, class: "form-columns" do |f| %>
      <div class="select">
        <label for="1st_public_objective">Reveal Objective</label>
        <%= f.text_field :public_objectives, name: "game[public_objectives][]", list: "stage_one_objectives", autocomplete: "off" %>
      </div>

      <datalist id="stage_one_objectives">
        <%= options_from_collection_for_select available_objectives_for_game(game), :key, :title %>
      </datalist>

      <%= f.submit "Start Next Round" %>
    <% end %>
  <% else %>
    <%= render "rounds/states/#{game.current_round.aasm_state}", game: game, round: game.current_round %>
  <% end %>
</section>
